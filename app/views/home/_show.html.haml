%html
  %head
    %link{:href => "custom/splashpage/splashpage.css", :rel => "stylesheet", :type => "text/css"}
    %script{:src => "custom/splashpage/splashpage.js", :type => "text/javascript"}
  %body
    #wrapper
      .login
        %h1
          = t('home.show.sign_in')
        = form_for(User.new, :as => :user, :url => session_path(:user)) do |f|

          %p
            = f.label :username , t('username')
            = f.text_field :username, :tabindex => 1, :value => prefilled_username, :placeholder => t('username')

          %p
            = f.label :password , t('password')
            = f.password_field :password, :tabindex => 2, :placeholder => t('password')

            = link_to t('home.show.forgot_password'), new_user_password_path, :id => "forgot_password_link", :tabindex => 5

          %p.submit
            = f.submit t('home.show.sign_in'), :tabindex => 4
        %div#right_text
          = t('home.show.no_account')
          %a{:href => "/users/sign_up", :tabindex => "6"}
            = t('home.show.sign_up')
      .dhtmlgoodies_question
        %h1
          = t('home.show.why_despora')
      .dhtmlgoodies_answer
        %div
          %p
            = t('home.show.despora_desc1')
            %br
            = t('home.show.despora_desc2')
            %br
            = t('home.show.despora_desc3')    
      .dhtmlgoodies_question
        %h1 FAQ
      .dhtmlgoodies_answer
